mapT :: (a -> b) -> (a, a) -> (b, b)
mapT f (a1, a2) = (f a1, f a2)

-- ────────────────────────────────────────────── misc - utils - list •3.06• ──┤

-- maxLength :: Foldable a => [a] -> Int
maxLength a = maximum $ map length a

-- ──────────────────────────────────────────── misc - utils - string •3.07• ──┤

padStr :: Int -> String -> String
padStr n s
  | length s < n = s ++ replicate (n - length s) ' '
  | otherwise = s

