  [ -- window management: change focus
    ( (myModMask, xK_Tab)
    , windows SS.focusDown
    , "move focus to the next window"
    )
  , ( (myModMask .|. shiftMask, xK_Tab)
    , windows SS.focusUp
    , "move focus to the previous window"
    )
  , ( (myModMask, xK_j)
    , windows SS.focusDown
    , "move focus to the next window"
    )
  , ( (myModMask, xK_k)
    , windows SS.focusUp
    , "move focus to the previous window"
    )
    -- window management: swap
  , ( (myModMask, xK_Return)
    , windows SS.swapMaster
    , "swap the focused window and the master window"
    )
  , ( (myModMask .|. shiftMask, xK_j)
    , windows SS.swapDown
    , "swap the focused window with the next window"
    )
  , ( (myModMask .|. shiftMask, xK_k)
    , windows SS.swapUp
    , "swap the focused window with the previous window"
    )
    -- window management: resize
  , ( (myModMask, xK_n)
    , refresh
    , "resize viewed windows to the correct size"
    )
  , ( (myModMask, xK_h)
    , sendMessage Shrink
    , "shrink the master area"
    )
  , ( (myModMask, xK_l)
    , sendMessage Expand
    , "expand the master area"
    )
    -- window management: float windows support
  , ( (myModMask .|. altMask, xK_r)
    , HP.placeFocused floatingWindowPlacement
    , "manually reposition focused floating window"
    )
  , ( (myModMask, xK_t)
    , withFocused $ windows . SS.sink
    , "push window back into tiling"
    )
    -- window management: work with master/slave windows
  , ( (myModMask, xK_m)
    , windows SS.focusMaster
    , "move focus to the master window"
    )
  , ( (myModMask, xK_comma)
    , sendMessage (IncMasterN 1)
    , "increment the number of windows in the master area"
    )
  , ( (myModMask, xK_period)
    , sendMessage (IncMasterN (-1))
    , "deincrement the number of windows in the master area"
    )
    -- layout
  , ( (myModMask, xK_space)
    , sendMessage NextLayout
    , "rotate through the available layout algorithms"
    )
-- TODO doesn't work
--  , ( (myModMask .|. shiftMask, xK_space)
--    , setLayout myLayoutHook
--    , "reset the layouts on the current workspace to default"
--    )
    -- Launch
  , ( (myModMask .|. shiftMask, xK_Return)
    , spawn myTerminal
    , "open terminal"
    )
  , ( (myModMask, xK_p)
    , spawn programLauncher
    , "open program launcher"
    )
  , ( (myModMask .|. shiftMask, xK_c)
    , kill
    , "close the focused window"
    )
    -- scratchpads
  , ( (myModMask, xK_a)
    , ASM.submap . M.fromList $ [ (kb, action)
                                | (kb, action, _) <- scratchpadsKeymaps]
    , "scratchpads"
    )
    -- search
  , ( (myModMask, xK_s)
    , ASM.submap $ (M.fromList [ (kb, ASE.promptSearch P.defaultXPConfig action)
                               | (kb, action, _) <- searchKeymaps])
    , "search prompt"
    )
  , ( (myModMask .|. shiftMask, xK_s)
    , ASM.submap $ (M.fromList [ (kb, ASE.selectSearch action)
                               | (kb, action, _) <- searchKeymaps])
    , "search from selection"
    )
    -- help
  , ( (myModMask .|. shiftMask, xK_slash)
    , spawn $ echo help
    , "show available bindings"
    )
    -- quit / restart
  , ( (myModMask .|. shiftMask, xK_q)
    , io (exitWith ExitSuccess)
    , "quit xmonad"
    )
  , ( (myModMask, xK_q)
    , spawn recompileXMonad
    , "restart xmonad"
    )
  ]
  where
  echo msg = "echo \"" ++ msg ++ "\" | xmessage -file -"

  programLauncher = "dmenu_run"

  recompileXMonad = "if type xmonad; then xmonad --recompile && xmonad --restart; else xmessage xmonad not in \\$PATH: \"$PATH\"; fi"

help = L.intercalate "\n" $ prettyRootBindings
  where
    prettyRootBindings = map [ppBinding rootKeys key rootDesc desc separator | (key, desc) <- rootBindings]
    rootBindings       = [(key, desc) | (key, _, desc) <- keyBindingsInfo]
    rootKeys           = map fst rootBindings
    rootDesc           = map snd rootBindings

    separator = "  "

    subBindingsMapping =
      [ ("scratchpads",           [(key, desc) | (key, _, desc) <- scratchpadsKeymaps])
      , ("search from selection", [(key, desc) | (key, _, desc) <- searchKeymaps])
      ]

    allBindings = [insertAfter rootBindingDesc rootBindings subBinding | (rootBindingDesc, subBinding) <- subBindingsMapping]

insertAfter elem list otherList = (slice 0 ((index list elem) + 1)) ++ otherList ++ (slice ((index list elem) + 1) (length list))
  where
    index list elem = L.findIndex (\x -> (x == elem)) list

slice start stop xs = take (stop - start) $ drop start xs

