-- ─────────────────────────────────────────────────── mouse bindings •2.10• ──┤

myMouseBindings =
  [ ( (mod4Mask, button1)
    , myMoveWindow
    , "Move window"
    )
  , ( (mod4Mask .|. shiftMask, button1)
    , myExpandWindow
    , "Expand window"
    )
  , ( (mod4Mask, button3)
    , myResizeWindow
    , "Resize window"
    )
  ]
  where
    myMoveWindow =
      \w -> focus w >>
            mouseMoveWindow w >>
            AFS.snapMagicMove (Just 50) (Just 50) w
    myExpandWindow =
      \w -> focus w >>
            mouseMoveWindow w >>
            AFS.snapMagicResize [AFS.L, AFS.R, AFS.U, AFS.D] (Just 50) (Just 50) w
    myResizeWindow =
      \w -> focus w >>
            mouseResizeWindow w >>
            AFS.snapMagicResize [AFS.R, AFS.D] (Just 50) (Just 50) w

